---
import SeeMore from "./SeeMore.astro"

interface Props {
	skills: string[];
	headingText: string;
	textSeeMore: string;
}

const { skills, headingText, textSeeMore } = Astro.props
---

<h2 class="text-gradient h2">{headingText}:</h2>
<ul>
  {skills.map((skill, i) => <li class:list={[{ hide: i>2 }]}>{skill}</li>)}
</ul>
<SeeMore text={textSeeMore} />
<style>
	ul {
		margin-bottom: 3rem;
	}
	li {
		font-size: 1rem;
		margin: 5px 0;
	}
</style>