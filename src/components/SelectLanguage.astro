---
interface langs {
  en: string;
  pt: string;
  es: string;
}

interface Props {
  langs: langs;
}

const { langs } = Astro.props
---

<div>
  <a href="/en/">{langs.en}</a>
  <a href="/pt/">{langs.pt}</a>
  <a href="/es/">{langs.es}</a>
</div>
<style>
  div {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    margin-top: 1rem;
    font-size: 18px;
  }
  a {
    color: white;
  }
  a:hover {
    color: rgb(var(--accent-light));
  }
  a:not(:first-child) {
    border-left: 1px solid white;
    padding-left: 1rem;
  }
</style>